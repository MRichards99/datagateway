{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src",
    "../datagateway-common/src/state/actions/instruments.tsx",
    "../datagateway-common/src/state/actions/facilityCycles.tsx",
    "../datagateway-common/src/state/actions/instruments.test.tsx",
    "../datagateway-common/src/state/actions/facilityCycles.test.tsx"
  ]
}
