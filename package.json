{
  "name": "datagateway",
  "private": true,
  "version": "0.1.0",
  "devDependencies": {
    "husky": "^3.0.2",
    "lerna": "^3.16.4",
    "lerna-update-wizard": "^0.16.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --hoist",
    "lint": "lerna run lint:js",
    "tsc": "lerna run tsc",
    "test": "npm run test:unit && npm run test:e2e",
    "test:ci": "npm run test:unit:ci && npm run test:e2e:ci",
    "test:unit:ci": "lerna run test:ci --stream",
    "test:e2e:ci": "lerna run e2e:ci --stream",
    "test:unit": "lerna run test --stream",
    "test:e2e": "lerna run e2e --stream",
    "datagateway-table": "cd packages/datagateway-table && npm start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream pre-commit"
    }
  }
}
