{
  "name": "datagateway",
  "private": true,
  "version": "0.1.0",
  "devDependencies": {
    "cypress": "^3.4.1",
    "cypress-failed-log": "^2.5.1",
    "husky": "^3.0.2",
    "lerna": "^3.16.4",
    "lerna-update-wizard": "^0.16.0"
  },
  "scripts": {
    "prepare": "lerna bootstrap",
    "lint": "lerna run lint:js",
    "tsc": "lerna run tsc",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "lerna run test --stream",
    "test:e2e": "lerna run e2e --stream --concurrency 1",
    "datagateway-table": "cd packages/datagateway-table && npm start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream pre-commit"
    }
  }
}
